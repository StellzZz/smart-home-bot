# =============================================================================
# Smart Home Bot Configuration
# =============================================================================

# Telegram Bot Settings
TELEGRAM_TOKEN=your_telegram_bot_token_here
TELEGRAM_WEBHOOK_URL=https://your-domain.com/webhook
TELEGRAM_WEBHOOK_SECRET=your_webhook_secret_here

# Security Settings
TELEGRAM_USER_IDS=123456789,987654321
ALLOWED_USERNAMES=your_username,another_user
RATE_LIMIT_REQUESTS=30
RATE_LIMIT_PERIOD=60

# Device Settings
HOME_ASSISTANT_URL=http://localhost:8123
HOME_ASSISTANT_TOKEN=your_home_assistant_token_here

# TV Settings (Android TV/Kiwi 2K)
TV_IP_ADDRESS=192.168.1.100
TV_PORT=5555

# Vacuum Settings (Xiaomi X20+)
VACUUM_IP_ADDRESS=192.168.1.101
VACUUM_TOKEN=your_xiaomi_vacuum_token

# Light Settings (Xiaomi Smart Lights)
LIGHT_GATEWAY_IP=192.168.1.102

# Application Settings
APP_NAME=Smart Home Jarvis
APP_VERSION=1.0.0
DEBUG=false
LOG_LEVEL=INFO
LOG_FILE=logs/smart_home.log

# Voice Recognition Settings
SPEECH_RECOGNITION_ENABLED=true
SPEECH_SYNTHESIS_ENABLED=true
SPEECH_LANGUAGE=ru-RU

# Database Settings (for future scaling)
DATABASE_URL=sqlite:///./smart_home.db
